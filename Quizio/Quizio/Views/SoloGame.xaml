<UserControl x:Class="Quizio.Views.SoloGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}" >
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Lets play SOLO" Style="{StaticResource Heading2}" />
                <TextBlock Text="Deine Kategorie:" />
                <Label Content="{Binding Category}"  />
                <TextBlock Text="Dein Schwierigkeitsgrad:" />
                <Label Content="{Binding Difficulty}"  />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
